<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Modules.Posts.AddPostFragment">


    <CheckBox
        android:id="@+id/cbWilltoPay"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:text="Willing to Pay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FromLocation" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="421dp"
        android:layout_height="155dp"
        android:layout_marginTop="144dp"
        android:hint="Please attach item description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChooseImg"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="36dp"
        android:text="@string/pick_review_picture"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextMultiLine"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/addImg"
        android:layout_width="67dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/review_image"
        android:src="@drawable/baseline_add_photo_alternate_24"
        app:layout_constraintEnd_toStartOf="@+id/btnChooseImg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/FromLocation"
        android:layout_width="186dp"
        android:layout_height="51dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="9dp"
        android:hint="@string/from"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/ToLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <EditText
        android:id="@+id/ToLocation"
        android:layout_width="201dp"
        android:layout_height="51dp"
        android:layout_marginTop="18dp"
        android:hint="@string/To"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:paddingRight="10dp"
        android:text="Location:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine" />

    <Button
        android:id="@+id/btnAddStudentSave"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="60dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddStudentCancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnAddStudentCancel"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="CANCEL"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAddStudentSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnAddStudentSave" />

    <CheckBox
        android:id="@+id/cbNotToPay"
        android:layout_width="107dp"
        android:layout_height="51dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="67dp"
        android:text="Not Willing To Pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cbWilltoPay"
        app:layout_constraintTop_toBottomOf="@+id/ToLocation" />


</androidx.constraintlayout.widget.ConstraintLayout>
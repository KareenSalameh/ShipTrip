<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Post"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivPostImage"
            android:layout_width="189dp"
            android:layout_height="92dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-15dp"
            android:layout_marginRight="-50dp"
            android:contentDescription="Post Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ship" />

        <EditText
            android:id="@+id/etItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Item Name"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etItemWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Item Weight"
            android:inputType="number|numberDecimal"
            android:minHeight="48dp" />

        <CheckBox
            android:id="@+id/cbPayForShipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="48dp"
            android:text="Pay for Shipping" />

        <EditText
            android:id="@+id/etFromLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="From Location"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etToLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="To Location"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Item Description"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <Button
            android:id="@+id/btnSavePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/gray"
            android:text="Save Post"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnCancelPost2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancel" />


    </LinearLayout>

</ScrollView>